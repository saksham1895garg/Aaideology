<main class="admin-main">
    <div class="table">
        <table>
            <tr class="admin-table-top">
                <th id="company-id">ID</th>
                <th id="company-logo">Logo</th>
                <th id="company-name">Company Name</th>
                <th id="job">Job Title</th>
                <th id="location">Location</th>
                <th id="salary">salary</th>
                <th id="duration">Duration</th>
                <th id="date">Date</th>
                <th id="action">Action</th>
            </tr> 
            <% admin.forEach((item) => { %>
           <tr>
            
                <td class="company-id">1</td>
                <td ><img class="table-company-logo" src="/uploads/<%= item.companylogo %>" alt="tcs"></td>

                <td><%= item.companyname %></td>
                <td><%= item.jobname %></td>
                <td><%= item.location %></td>
                <td><%= item.salary %></td>
                <td><%= item.duration %></td>
                <td><%= item.posteddate %></td>
                <td class="actions-td">
                   
                        <a href="/admin/edit-post/<%= item._id %>" class="edit"><img class="edit" src="/photos/edit.png" alt=""></a>
                    
                    <form action="/admin/delete-post/<%= item._id %>?_method=DELETE" method="post">
                        <button type="submit" class="del"  alt=""><img class="del" src="/photos/delete.png" alt=""></button>
                    </form>
                    
                </td>
               
                
           </tr>
            <% }); %>
          
          
        </table>
    
    </div>
    <div class="warning"> 
        <h1 class="delete-warning">Do you want to delete  this post?</h1>
        <div class="delete-buttons">
            <button class="cancel-btn">Cancel</button>
          
            
             <button class="delete-btn">Delete</button>
            
             
             
            
    
    </div>

</main>

<script>
    let deleteButton = document.getElementsByClassName("del");
    let warningBox = document.getElementsByClassName("warning");

    document.querySelector(".del").addEventListener("click", () => {
        document.querySelector(".warning").style.display = "block";
    });
    document.querySelector(".cancel-btn").addEventListener("click", () => {
        document.querySelector(".warning").style.display = "none";
    });

    console.log("Delete button clicked");

</script>
